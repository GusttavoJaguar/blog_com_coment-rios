<%= tag.div id: dom_id(comment), class: "comment" do %>
  <p>
    <%= comment.author %><br>
    <%= comment.email %><br>
    <%= link_to comment.url, comment.url if comment.url.present? %><br>
    <%= comment.body %><br>
    Posted: <%= time_ago_in_words(comment.created_at) %> ago
  </p>
  <hr/>
<% end %>
